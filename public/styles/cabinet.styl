.book-list
  font-size 0
  position relative
  width: 865px;
  margin-left: auto;
  margin-right: auto;
  margin-top -50px
  margin-bottom 100px

  .item
    display inline-block
    width 33.333%
    margin-top 100px

    &.shelf
      &:before
        content ''
        background-image url(../images/icons/shelf.png)
        background-size contain
        background-repeat no-repeat
        background-position center
        left: -50px;
        right: -50px;
        height 100px
        display: inline-block;
        position: absolute;
        margin-top: 125px;

  .book-block
    margin: 0 auto;
    width 180px
    position relative
    text-align center

    .book-icon
      width 100%
      height auto

    .read-link
      background rgba(255, 0, 0, 0.50)
      font-size 18px
      left 0
      bottom 0
      right 0
      position absolute
      padding 10px
      color #fff !important
      transition .9s

      &:hover
        background rgba(255, 0, 0, .6)

    .epub-link
      position absolute
      font-size 16px
      left: 20px;
      bottom: -35px;

    .pdf-link
      position absolute
      font-size 16px
      left: 110px;
      bottom: -35px;