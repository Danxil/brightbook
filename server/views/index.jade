extends ../includes/layout

block main-content
    .header-false#header-false
    .header
        .header__inner
            .header__line
                .socials
                    a.socials__item.socials__fb
                    a.socials__item.socials__tw
                    a.socials__item.socials__inst
                    a.socials__item.socials__pin
            .header__line
                a(href="/").logo
                ul.menu
                    li.menu__item
                        a.menu__link(ng-click="subMenuOpen('books')", ng-class="{active: subMenuMarkers.booksVisible}") Книги
                    li.menu__item
                        a.menu__link(ng-click="subMenuOpen('authors')", ng-class="{active: subMenuMarkers.authorsVisible}") Авторы
                    li.menu__item
                        a.menu__link(ng-click="subMenuOpen('more')", ng-class="{active: subMenuMarkers.moreVisible}") Больше
                    li.menu__item
                        a.menu__link(ng-click="subMenuOpen('login')", ng-class="{active: subMenuMarkers.loginVisible}") Войти к себе
                    li.menu__item(ng-click="subMenuOpen('search')")
                        a.search-btn(ng-class="{active: subMenuMarkers.searchVisible}")
    .localization
        a.localization__btn.active РУС
        a.localization__btn УКР
    .sub-menu(ng-class="{'sub-menu_visible': subMenuMarkers.booksVisible}")
        .container.categories
           a.categories__item Бизнес
           a.categories__item Биографии и мемуары
           a.categories__item Детские
           a.categories__item Здоровье
           a.categories__item Мужчина и женщина
           a.categories__item Политика
           a.categories__item Родителям
           a.categories__item Саморазвитие
           a.categories__item Христианство
           a.categories__item Художественные
           a.categories__item.categories__item_fancy Подарок мужчине
           a.categories__item.categories__item_fancy В подарок женщине
           a.categories__item.categories__item_fancy В отпуск
    .sub-menu(ng-class="{'sub-menu_visible': subMenuMarkers.authorsVisible}")
        .container.categories
           .h3 Авторы
    .sub-menu(ng-class="{'sub-menu_visible': subMenuMarkers.moreVisible}")
        .container.categories
           .h3 Больше
    .sub-menu(ng-class="{'sub-menu_visible': subMenuMarkers.loginVisible}")
        .container.categories
            div.login-form
                .row
                    .input-wrapp.login
                        input.subscribal__input.input
                .row
                    .input-wrapp.pass
                        input.subscribal__input.input(type="password")
                        button.enter-btn
    .sub-menu(ng-class="{'sub-menu_visible': subMenuMarkers.searchVisible}")
        .container.categories
           .h3 Поиск
    .main(ng-view)
    .container
        .footer.h6
            .row
                .col-lg-4 © Брайт Букс
                    p
                        a.underline.text-darkgray Условия предоставления услуг
                .col-lg-3 Адрес:
                    div А/я 194, Украина
                    div Киев, 02002
                .col-lg-3 Мы принимаем к оплате
                    div
                        img(src="/images/icons/visa.png")
                        span &nbsp;
                        img(src="/images/icons/mastercard.png")
                .col-lg-2 Следуйте за нами
                    .socials.socials_footer
                        a.socials__item.socials__fb
                        a.socials__item.socials__tw
                        a.socials__item.socials__inst
                        a.socials__item.socials__pin